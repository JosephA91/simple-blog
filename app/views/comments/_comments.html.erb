<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="well">
    <p><strong><%= comment.username %></strong></p>
    <p><%= comment.body %></p>
    <%= link_to "Delete", [comment.post, comment], class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>
